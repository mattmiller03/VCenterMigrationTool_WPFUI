<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="VCenterMigrationTool.Views.Pages.VCenterMigrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1400">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        
        <!-- TreeView Item Template -->
        <HierarchicalDataTemplate x:Key="InventoryNodeTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <ui:SymbolIcon Symbol="{Binding IconSymbol}" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                <TextBlock Text="{Binding Details}" 
                          FontSize="11" 
                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                          Margin="8,0,0,0" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </HierarchicalDataTemplate>
        
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="vCenter Inventory" 
                           FontSize="28" 
                           FontWeight="SemiBold"/>
                <TextBlock Text="Explore and compare your source and target vCenter environments" 
                           Opacity="0.7"
                           FontSize="14"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Refresh Button -->
            <ui:Button Grid.Column="1" 
                      Content="Refresh Inventory" 
                      Icon="{ui:SymbolIcon ArrowSync24}"
                      Command="{Binding RefreshInventoryTreesCommand}"
                      Appearance="Secondary"
                      VerticalAlignment="Top"/>
        </Grid>

        <!-- Loading Indicator -->
        <ui:Card Grid.Row="1" 
                Margin="0,0,0,15"
                Visibility="{Binding IsLoadingInventory, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ui:ProgressRing IsIndeterminate="True" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Loading vCenter inventory data..." 
                              FontSize="14"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!-- Dual Inventory Trees -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source vCenter Inventory -->
            <ui:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Source Header -->
                    <Border Grid.Row="0" 
                           Background="{DynamicResource ControlFillColorInputActiveBrush}"
                           BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}"
                           BorderThickness="0,0,0,1"
                           Padding="15,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <ui:SymbolIcon Symbol="Server24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Source vCenter" 
                                          FontWeight="SemiBold"
                                          FontSize="16"
                                          VerticalAlignment="Center"/>
                                <Border Background="{Binding SourceConnectionBackgroundBrush}"
                                       BorderBrush="{Binding SourceConnectionBorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="10"
                                       Padding="6,2"
                                       Margin="10,0,0,0">
                                    <TextBlock Text="{Binding SourceConnectionStatusShort}"
                                              FontSize="10"
                                              Foreground="{Binding SourceConnectionTextBrush}"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding SourceVCenterInfo}" 
                                      FontSize="12"
                                      Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- Source Tree -->
                    <Grid Grid.Row="1">
                        <!-- Tree Content -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Auto"
                                     Visibility="{Binding HasSourceInventory, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TreeView x:Name="SourceTreeView"
                                     ItemsSource="{Binding SourceInventoryTree}"
                                     ItemTemplate="{StaticResource InventoryNodeTemplate}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="10">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="True"/>
                                        <Setter Property="Padding" Value="2"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </ScrollViewer>

                        <!-- No Data Message -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding HasSourceInventory, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ui:SymbolIcon Symbol="Database24" 
                                          FontSize="48" 
                                          Opacity="0.3"
                                          Margin="0,0,0,10"/>
                            <TextBlock Text="No inventory data available" 
                                      FontSize="14"
                                      Opacity="0.6"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Connect to source vCenter to load inventory" 
                                      FontSize="12"
                                      Opacity="0.5"
                                      HorizontalAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Loading Overlay -->
                        <Grid Background="{DynamicResource ApplicationBackgroundBrush}" 
                             Opacity="0.9"
                             Visibility="{Binding IsLoadingSourceInventory, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                                <ui:ProgressRing IsIndeterminate="True" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Loading inventory..." FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Target vCenter Inventory -->
            <ui:Card Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Target Header -->
                    <Border Grid.Row="0" 
                           Background="{DynamicResource ControlFillColorInputActiveBrush}"
                           BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}"
                           BorderThickness="0,0,0,1"
                           Padding="15,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <ui:SymbolIcon Symbol="ServerMultiple20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Target vCenter" 
                                          FontWeight="SemiBold"
                                          FontSize="16"
                                          VerticalAlignment="Center"/>
                                <Border Background="{Binding TargetConnectionBackgroundBrush}"
                                       BorderBrush="{Binding TargetConnectionBorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="10"
                                       Padding="6,2"
                                       Margin="10,0,0,0">
                                    <TextBlock Text="{Binding TargetConnectionStatusShort}"
                                              FontSize="10"
                                              Foreground="{Binding TargetConnectionTextBrush}"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding TargetVCenterInfo}" 
                                      FontSize="12"
                                      Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- Target Tree -->
                    <Grid Grid.Row="1">
                        <!-- Tree Content -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Auto"
                                     Visibility="{Binding HasTargetInventory, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TreeView x:Name="TargetTreeView"
                                     ItemsSource="{Binding TargetInventoryTree}"
                                     ItemTemplate="{StaticResource InventoryNodeTemplate}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="10">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="True"/>
                                        <Setter Property="Padding" Value="2"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </ScrollViewer>

                        <!-- No Data Message -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding HasTargetInventory, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ui:SymbolIcon Symbol="Database24" 
                                          FontSize="48" 
                                          Opacity="0.3"
                                          Margin="0,0,0,10"/>
                            <TextBlock Text="No inventory data available" 
                                      FontSize="14"
                                      Opacity="0.6"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Connect to target vCenter to load inventory" 
                                      FontSize="12"
                                      Opacity="0.5"
                                      HorizontalAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Loading Overlay -->
                        <Grid Background="{DynamicResource ApplicationBackgroundBrush}" 
                             Opacity="0.9"
                             Visibility="{Binding IsLoadingTargetInventory, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                                <ui:ProgressRing IsIndeterminate="True" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Loading inventory..." FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>